@{
    var currentController = ViewContext.RouteData.Values["controller"] as string ?? "Quote";
    var currentAction = ViewContext.RouteData.Values["action"] as string ?? "AllQuotes";
    var currentPage = (currentController + "-" + currentAction).ToLower();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuoteApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuoteApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Quote" asp-action="AllQuotes">QuoteApplication</a>
                <div class="navbar-collapse collapse" d-sm-inline-flex justify-content-between@>
                    <ul class="navbar-nav" flex-grow-1>
                        <li class="nav-item">
                            @Html.ActionLink("AllQuotes", "AllQuotes", "Quote", null,
                            new { @class = currentAction == "AllQuotes" ? "navbar-brand nav-link" : "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("AllFavQuotes", "AllFavQuotes", "Quote", null,
                            new { @class = currentAction == "AllFavQuotes" ? "navbar-brand nav-link" : "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - QuoteApplication - <a asp-area="" asp-controller="Quote" asp-action="AllQuotes">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
